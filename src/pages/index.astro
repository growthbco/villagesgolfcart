		const phone = document.getElementById('customer-phone').value;
		const location = document.getElementById('delivery-location').value;
		const date = document.getElementById('rental-date').value;
		
		if (!name || !phone || !location || !date) {
			alert('Please fill in all fields');
			return;
		}
		
		// Calculate price
		let finalPrice = basePrice;
		if (selectedDuration === 'weekly') finalPrice *= 7 * 1.2;
		else if (selectedDuration === 'monthly') finalPrice *= 30 * 2.65;
		else finalPrice *= 3; // 3-day
		
		// Add fuel surcharge and taxes
		finalPrice += 20; // Fuel surcharge
		finalPrice *= 1.075; // 7.5% tax
		
		// Show results
		document.getElementById('step-3').classList.add('hidden');
		document.getElementById('quote-results').classList.remove('hidden');
		
		document.getElementById('quote-details').innerHTML = `
			<p><strong>Cart Type:</strong> ${selectedCart.replace('-', ' ').toUpperCase()}</p>
			<p><strong>Duration:</strong> ${selectedDuration.replace('-', ' ').toUpperCase()}</p>
			<p><strong>Delivery Location:</strong> ${location}</p>
			<p><strong>Rental Date:</strong> ${date}</p>
			<p><strong>Total Price:</strong> $${finalPrice.toFixed(2)}</p>
		`;
	}

	function resetCalculator() {
		selectedCart = null;
		selectedDuration = null;
		basePrice = 0;
		
		document.getElementById('step-1').classList.remove('hidden');
		document.getElementById('step-2').classList.add('hidden');
		document.getElementById('step-3').classList.add('hidden');
		document.getElementById('quote-results').classList.add('hidden');
		
		document.querySelectorAll('.cart-option, .duration-option').forEach(btn => {
			btn.classList.remove('border-[#146ff8]', 'bg-[#f8f9fa]');
		});
		
		document.getElementById('customer-name').value = '';
		document.getElementById('customer-phone').value = '';
		document.getElementById('delivery-location').value = '';
		document.getElementById('rental-date').value = '';
	}
</script>
