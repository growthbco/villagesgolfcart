---
export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Import global styles -->
		<link rel="stylesheet" href="/src/styles/global.css" />
		
		<!-- SEO Meta Tags -->
		<meta name="keywords" content="golf cart rentals, The Villages, Florida, golf cart hire, Masters Golf Cars, golf cart rental service" />
		<meta name="author" content="Masters Golf Cars" />
		<meta name="robots" content="index, follow" />
		
		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://villagesgolf.netlify.app" />
		<meta property="og:image" content="https://villagesgolf.netlify.app/images/golf-carts/2-seater-blue-golf-cart-lake-view.png" />
		
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="https://villagesgolf.netlify.app/images/golf-carts/2-seater-blue-golf-cart-lake-view.png" />
		
		<!-- Local Business Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "Masters Golf Cars",
			"description": "Professional golf cart rental service in The Villages, Florida",
			"url": "https://villagesgolf.netlify.app",
			"telephone": "+1-352-555-0123",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "The Villages",
				"addressRegion": "FL",
				"addressCountry": "US"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "28.9344",
				"longitude": "-81.9594"
			},
			"openingHours": "Mo-Su 08:00-18:00",
			"priceRange": "$$",
			"serviceArea": {
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": "28.9344",
					"longitude": "-81.9594"
				},
				"geoRadius": "50000"
			}
		}
		</script>
	</head>
	<body>
		<!-- Navigation -->
		<nav class="bg-white shadow-lg sticky top-0 z-50">
			<div class="container mx-auto px-4">
				<div class="flex justify-between items-center py-4">
					<!-- Logo -->
					<div class="flex items-center">
						<a href="/" class="text-2xl font-bold text-[#146ff8]">
							Masters Golf Cars
						</a>
					</div>
					
					<!-- Desktop Navigation -->
					<div class="hidden md:flex items-center space-x-8">
						<a href="/" class="text-gray-700 hover:text-[#146ff8] font-medium transition">Home</a>
						
						<!-- Services Dropdown -->
						<div class="relative group">
							<button class="text-gray-700 hover:text-[#146ff8] font-medium transition flex items-center">
								Services
								<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>
							<div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform -translate-y-2 group-hover:translate-y-0">
								<div class="py-2">
									<a href="/3-day-rentals" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">3-Day Rentals</a>
									<a href="/weekly-rentals" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">Weekly Rentals</a>
									<a href="/monthly-rentals" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">Monthly Rentals</a>
								</div>
							</div>
						</div>
						
						<!-- Carts Dropdown -->
						<div class="relative group">
							<button class="text-gray-700 hover:text-[#146ff8] font-medium transition flex items-center">
								Carts
								<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>
							<div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform -translate-y-2 group-hover:translate-y-0">
								<div class="py-2">
									<a href="/2-passenger-cart" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">2-Passenger Carts</a>
									<a href="/4-passenger-cart" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">4-Passenger Carts</a>
									<a href="/6-passenger-cart" class="block px-4 py-2 text-gray-700 hover:bg-[#f8f9fa] hover:text-[#146ff8] transition">6-Passenger Carts</a>
								</div>
							</div>
						</div>
						
						<a href="/gallery" class="text-gray-700 hover:text-[#146ff8] font-medium transition">Gallery</a>
						<a href="/about" class="text-gray-700 hover:text-[#146ff8] font-medium transition">About</a>
						<a href="/contact" class="text-gray-700 hover:text-[#146ff8] font-medium transition">Contact</a>
						<a href="/faq" class="text-gray-700 hover:text-[#146ff8] font-medium transition">FAQ</a>
					</div>
					
					<!-- Mobile Menu Button -->
					<button class="md:hidden text-gray-700 hover:text-[#146ff8] transition" onclick="toggleMobileMenu()">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
				
				<!-- Mobile Navigation -->
				<div id="mobile-menu" class="md:hidden hidden pb-4">
					<div class="space-y-2">
						<a href="/" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">Home</a>
						
						<!-- Mobile Services Section -->
						<div class="border-t border-gray-200 pt-2">
							<p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Services</p>
							<div class="space-y-1 ml-4">
								<a href="/3-day-rentals" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">3-Day Rentals</a>
								<a href="/weekly-rentals" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">Weekly Rentals</a>
								<a href="/monthly-rentals" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">Monthly Rentals</a>
							</div>
						</div>
						
						<!-- Mobile Carts Section -->
						<div class="border-t border-gray-200 pt-2">
							<p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Carts</p>
							<div class="space-y-1 ml-4">
								<a href="/2-passenger-cart" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">2-Passenger Carts</a>
								<a href="/4-passenger-cart" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">4-Passenger Carts</a>
								<a href="/6-passenger-cart" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">6-Passenger Carts</a>
							</div>
						</div>
						
						<a href="/gallery" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">Gallery</a>
						<a href="/about" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">About</a>
						<a href="/contact" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">Contact</a>
						<a href="/faq" class="block py-2 text-gray-700 hover:text-[#146ff8] transition">FAQ</a>
					</div>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main>
			<slot />
		</main>

		<!-- Footer -->
		<footer class="bg-[#1f2937] text-white py-16">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<!-- Company Info -->
					<div class="col-span-1 md:col-span-2">
						<h3 class="text-2xl font-bold text-[#146ff8] mb-4">Masters Golf Cars</h3>
						<p class="text-gray-300 mb-4">
							Professional golf cart rental service in The Villages, Florida. 
							Family-owned business serving the community since 1999.
						</p>
						<div class="flex space-x-4">
							<a href="tel:+1-352-555-0123" class="text-[#146ff8] hover:text-[#0ea5e9] transition">
								+1 (352) 555-0123
							</a>
							<a href="mailto:info@mastersgolfcars.com" class="text-[#146ff8] hover:text-[#0ea5e9] transition">
								info@mastersgolfcars.com
							</a>
						</div>
					</div>
					
					<!-- Quick Links -->
					<div>
						<h4 class="text-lg font-semibold mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="/about" class="text-gray-300 hover:text-white transition">About Us</a></li>
							<li><a href="/gallery" class="text-gray-300 hover:text-white transition">Gallery</a></li>
							<li><a href="#pricing" class="text-gray-300 hover:text-white transition">Pricing</a></li>
							<li><a href="/faq" class="text-gray-300 hover:text-white transition">FAQ</a></li>
						</ul>
					</div>
					
					<!-- Services -->
					<div>
						<h4 class="text-lg font-semibold mb-4">Services</h4>
						<ul class="space-y-2">
							<li><a href="/3-day-rentals" class="text-gray-300 hover:text-white transition">3-Day Rentals</a></li>
							<li><a href="/weekly-rentals" class="text-gray-300 hover:text-white transition">Weekly Rentals</a></li>
							<li><a href="/monthly-rentals" class="text-gray-300 hover:text-white transition">Monthly Rentals</a></li>
							<li><a href="/contact" class="text-gray-300 hover:text-white transition">Contact</a></li>
						</ul>
					</div>
				</div>
				
				<div class="border-t border-gray-600 mt-8 pt-8 text-center">
					<p class="text-gray-400">
						© 2024 Masters Golf Cars. All rights reserved. | 
						<a href="/terms" class="text-[#146ff8] hover:text-[#0ea5e9] transition">Terms of Service</a>
					</p>
				</div>
			</div>
		</footer>

		<script>
			function toggleMobileMenu() {
				const mobileMenu = document.getElementById('mobile-menu');
				mobileMenu.classList.toggle('hidden');
			}
		</script>
	</body>
</html>
