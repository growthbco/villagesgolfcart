						<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold mb-3 text-[#333333]">Reliable Service</h3>
					<p class="text-[#666666]">On-time delivery and pickup, 24/7 support</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Calculator Section -->
	<section id="pricing" class="py-16 bg-[#f8f9fa]">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold mb-4 text-[#333333]">Get Your Instant Quote</h2>
				<p class="text-xl text-[#666666]">Choose your cart and rental duration</p>
			</div>
			
			<div class="max-w-4xl mx-auto">
				<div class="bg-white rounded-2xl shadow-xl p-8">
					<!-- Cart Selection -->
					<div class="mb-8">
						<h3 class="text-xl font-bold mb-4 text-[#333333]">Select Your Cart</h3>
						<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
							<button class="cart-option p-6 border-2 border-gray-200 rounded-lg hover:border-[#146ff8] hover:bg-[#f8f9fa] transition" onclick="selectCart('2-passenger', 175)">
								<img src="/images/golf-carts/2-seater-blue-golf-cart-lake-view.png" 
									 alt="2-Passenger Golf Cart" 
									 class="w-16 h-16 object-cover rounded-lg mx-auto mb-3">
